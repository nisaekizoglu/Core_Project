@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Mesaj Detayları</h1>

<form class="form-group">
    @Html.HiddenFor(x => x.WriterMessageID, new { @class = "form-control" })
    @Html.Label("Gönderen İsim")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderen Mail")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextBoxFor(x => x.Content, new { @class = "form-control" })
</form>
