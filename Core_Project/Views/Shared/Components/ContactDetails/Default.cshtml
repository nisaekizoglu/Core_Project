@using EntityLayer.Concrete
@model List<Contact>
<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
	<div class="mt-3 px-1">
		<div class="h5">İletişim Kanallarım</div>
		<p>İş birlikleri ve sorularınız için bana ulaşabilirsiniz!</p>
	</div>
	<div class="mt-53 px-1">
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-sm-2">
					<div class="pb-1">Email:</div>
				</div>
				<div class="col-sm-10">
					<div class="pb-1 fw-bolder">@item.Mail</div>
				</div>
				<div class="col-sm-2">
					<div class="pb-1">LinkedIn:</div>
				</div>
				<div class="col-sm-10">
					<div class="pb-1 fw-bolder">nisaekizoglu</div>
				</div>
				<div class="col-sm-2">
					<div class="pb-1">Telefon:</div>
				</div>
				<div class="col-sm-10">
					<div class="pb-1 fw-bolder">@item.PhoneNumber</div>
			</div>
			}
		</div>
	</div>
</div>
