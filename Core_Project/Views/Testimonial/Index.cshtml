@using EntityLayer.Concrete
@model List<Testimonial>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0">
	<h3 class="mb-0">Referans Listesi Tablosu</h3>
</div>
<div class="table-responsive">
	<table class="table align-items-center table-flush">
		<thead class="thead-light">
			<tr>
				<th>#</th>
				<th>Ad Soyad</th>
				<th>Şirket</th>
				<th>Unvan</th>
				<th>Sil</th>
				<th>Detaylar</th>
			</tr>
		</thead>
		<tbody class="list">
			@foreach (var item in Model)
			{
				<tr>
					<td><img src="@item.ImageUrl" alt="image" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" /></td>
					<td>@item.ClientName</td>
					<td>@item.Company</td>
					<td>@item.Title</td>
					<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn" style="color:white;background-color:#EA2027">Sil</a></td>
					<td><a href="/Testimonial/EditTestimonial/@item.TestimonialId" class="btn" style="color:white;background-color:#44bd32">Detaylar</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>

